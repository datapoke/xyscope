#!/bin/bash
#
# XYScope.app launcher - opens Terminal and runs setup/visualizer
#

# Get the Resources directory
RESOURCES_DIR="$(cd "$(dirname "$0")/../Resources" && pwd)"

# Open Terminal and run the launch script
osascript <<EOF
tell application "Terminal"
    activate
    do script "cd '$RESOURCES_DIR' && ./XYScope.command"
end tell
EOF
